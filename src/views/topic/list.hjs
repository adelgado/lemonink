<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>{{ title }}</h1>

	 <table style='border: 1px'>
		 <thead>
			<th>
				<td>Topic</td>
				<td>Creation Date</td>
				<td>Author</td>
				<td>Replies</td>
			</th>
		</thead>
		<tbody>
		{{# topics}}
		<tr>
			<td>
				<a href="/topic/{{id}}">{{title}}</a>
			</td>
			<td>{{dateCreated}}</td>
			<td>{{author}}</td>
			<td>{{postCount}}</td>
		</tr>
		{{/ topics}}
		</tbody>
	</table>

		<hr/>

		<form action="/topic" method="POST">
			<fieldset>
				<label>New post</label>

				<ul>
					<li>Title:<input name="title" /></li>
					<li>Author:<input name="author" /></li>
					<li><textarea name="message"></textarea></li>
					<li><input type="submit"></li>
				</ul>
			</fieldset>
		</form>
  </body>
</html>
